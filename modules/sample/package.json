{
  "name": "domoja-sample",
  "author": "Bruno Chabrier",
  "version": "0.1.0",
  "private": false,
  "description": "A sample Domoja module skeleton",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "cover": "istanbul cover ./node_modules/mocha/bin/_mocha",
    "report": "istanbul report text-summary text",
    "doc": "jsdoc -c ./jsdoc.conf.json -t ./node_modules/ink-docstrap/template/ -R README.md -d doc .",
    "deploy": "./node_modules/gh-pages/bin/gh-pages -d doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bchabrier/domoja.git"
  },
  "keywords": [
    "home automation"
  ],
  "bugs": {
    "url": "https://github.com/bchabrier/domoja/issues"
  },
  "homepage": "https://github.com/bchabrier/domoja/modules/sample#readme",
  "dependencies": {
    "@types/node": "^13.9.3",
    "tracer": "^1.0.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.2",
    "mocha": "^6.2.2"
  },
  "peerDependencies": {
    "domoja-core": "*"
  },
  "files": [
    "dist/**/*"
  ]
}
